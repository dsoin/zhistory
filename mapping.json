{
  "template": "z*",
  "mappings": {
    "z_data" : {
      "properties" : {
        "number" : {"type": "string", "index":"not_analyzed", "copy_to":"address"},
        "street" : {"type": "string", "index":"not_analyzed", "copy_to":"address"},
        "postcode": {"type": "string", "index":"not_analyzed", "copy_to":"address"},
        "town": {"type": "string", "index":"not_analyzed", "copy_to":"address"},
        "borough":{"type": "string", "index":"not_analyzed", "copy_to":"address"},
        "county":{"type": "string", "index":"not_analyzed", "copy_to":"address"},
        "address":{"type": "string"},
         "geo_loc": {
          "type": "geo_point",
          "lat_lon": true
        },
        "bed":{"type": "byte"},
        "baths":{"type": "byte"},
        "floors":{"type": "byte"},
        "asking_price":{"type": "integer"},
        "thumb_url":{"type": "string", "index":"not_analyzed"},
        "img_url":{"type": "string", "index":"not_analyzed"},
        "details_url":{"type": "string", "index":"not_analyzed"},
        "first_published_date":{"type":"date","format": "yyyy-MM-dd HH:mm:ss"},
        "last_published_date":{"type":"date","format": "yyyy-MM-dd HH:mm:ss"},

        "fetched_time":{"type":"date","format": "yyyy-MM-dd HH:mm:ss", "store":"true"},
        "retained":{"type":"boolean"},
        "added":{"type":"boolean"},
        "reappeared":{"type":"boolean"},
        "removed":{"type":"boolean"},
        "similarity_hash":{"type": "string", "index":"not_analyzed"}

      }
    }
  }
}